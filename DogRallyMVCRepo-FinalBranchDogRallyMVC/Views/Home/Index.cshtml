@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/images/Backgroun.webp'); /* Tilføj din baggrundsbillede sti her */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Candara, sans-serif;
        }

        .content {
            text-align: center;
            padding: 20px;
            color: white;
            background: rgba(0, 0, 0, 0.5); /* Semi-transparent baggrund for bedre læsbarhed */
            border-radius: 10px;
            margin: 20px;
        }

        h1 {
            font-size: 2em; /* Juster font size for større skærme */
            margin: 0.5em 0;
        }

        p {
            font-size: 1.2em; /* Juster font size for større skærme */
            margin-bottom: 1em;
        }

        .button {
            font-size: 1.2em;
            padding: 10px 20px;
            margin-top: 20px;
            color: white;
            background-color: #007bff; /* Bootstrap primary color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

            .button:hover {
                background-color: #0056b3; /* Darker shade on hover */
            }

        /* Vi bruger fleksbox til at sikre, at indholdet tilpasser sig skærmstørrelsen */
        .content {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>Velkommen til appen</h1>
        <p>Her kan du registrere og se dine arbejdstimer.</p>
        <a href="/Identity/Account/Login" class="button">Log ind her</a> <!-- Opdateret link til login siden -->
    </div>
</body>
</html>

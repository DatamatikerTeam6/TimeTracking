@using Microsoft.AspNetCore.Identity
@inject SignInManager<DogRallyMVC.Areas.Identity.Data.DogRallyMVCUser> SignInManager
@inject UserManager<DogRallyMVC.Areas.Identity.Data.DogRallyMVCUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tidsregistrering</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DogRallyMVC.styles.css" asp-append-version="true" />
    <style>

        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        footer {
            margin-top: auto;
        }

        .navbar-nav .nav-item .nav-link,
        .navbar-nav .nav-item .btn-link {
            padding: 0.5rem 1rem; /* Matcher de andre links */
            margin: 0; /* Ingen margin for at matche */
            font-size: 1rem; /* Matchende font-størrelse */
            border: none; /* Sikrer at der ikke er nogen kantlinje */
            background: none; /* Ingen baggrundsfarve */
            text-decoration: none; /* Ingen understregning */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tidsregistrering</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Timetracking" asp-action="RegisterHours">Registrér Timer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="TimeTracking" asp-action="ViewUserHours">Se timer</a>
                        </li>

                       
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="TimeTracking" asp-action="ViewAllUserHours">Se alle medarbejdertimer</a>
                            </li>
                        


                        <li class="nav-item">
                            <a href="#" class="nav-link text-light" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Log ud</a>
                            <form id="logout-form" method="post" asp-controller="Users" asp-action="Logout" style="display: none;">
                                <!-- Formularet til logout er skjult og vil blive sendt via JavaScript -->
                            </form>
                        </li>



                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
